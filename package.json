{
  "name": "nodecg-react-layouts",
  "version": "0.1.0",
  "description": "A boilerplate bundle to get started with NodeCG, React and Flux.",
  "homepage": "https://github.com/mkrl/nodecg-react",
  "author": {
    "name": "mkrl",
    "email": "self@mkrl.xyz",
    "url": "https://mkrl.xyz"
  },
  "files": [
    "dashboard",
    "graphics",
    "extension.js",
    "src",
    "extension"
  ],
  "keywords": [
    "react",
    "flux",
    "nodecg-bundle"
  ],
  "nodecg": {
    "compatibleRange": "^1.1.1",
    "dashboardPanels": [
      {
        "name": "general",
        "title": "General settings",
        "width": 2,
        "file": "general.html",
        "headerColor": "#525F78"
      },
      {
        "name": "popups",
        "title": "Popup panels",
        "width": 3,
        "file": "popups.html",
        "headerColor": "#525F78"
      },
      {
        "name": "couch",
        "title": "On-screen people",
        "width": 4,
        "file": "couch.html",
        "headerColor": "#525F78"
      },
      {
        "name": "people",
        "workspace": "Hosts and guests",
        "title": "On-screen talent and guests",
        "width": 5,
        "file": "people.html",
        "headerColor": "#525F78"
      }
    ],
    "graphics": [
      {
        "file": "index.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": true
      }
    ],
    "assetCategories": [
      {
        "name": "sponsors",
        "title": "Sponsors",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "logo",
        "title": "Logo",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ]
  },
  "repository": "git@github.com:mkrl/nodecg-react-layouts.git",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "parcel-bundler": "^1.12.3",
    "standard": "^14.2.0"
  },
  "dependencies": {
    "events": "^3.0.0",
    "flux": "^3.1.3",
    "moment": "^2.29.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-live-clock": "^3.1.0",
    "react-moment": "^0.9.2",
    "react-slideshow-image": "^1.2.0",
    "react-transition-group": "^4.2.1",
    "styled-components": "^4.3.2",
    "styled-reset": "^2.0.16",
    "styled-transition-group": "2"
  },
  "scripts": {
    "start": "parcel watch src/index.html -d graphics --public-url ./",
    "test": "standard",
    "build": "parcel build src/index.html -d graphics --public-url ./"
  }
}
